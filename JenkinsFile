pipeline {
    agent any
    environment {
        MVN_GOAL = 'clean test'
        M2_HOME = 'C:\Program Files\apache-maven-3.8.6'
        X_SCREEN = '1920x1080x16'
    }
    stages {
        stage('Execute tests') {
            steps {
                wrap([$class: 'Xvfb', screen: "${env.X_SCREEN}", autoDisplayName: true]) {
                    bat"${env.M2_HOME}/bin/mvn ${env.MVN_GOAL}"
                }
            }
        }
    }